<persistence xmlns="https://jakarta.ee/xml/ns/persistence" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd" 
version="3.0">


    <persistence-unit name="fruit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>persistence.entities.BuyedItem</class>
        <class>persistence.entities.Cart</class>
        <class>persistence.entities.CartItem</class>
        <class>persistence.entities.CreditCard</class>
        <class>persistence.entities.Customer</class>
        <class>persistence.entities.CustomerOrder</class>
        <class>persistence.entities.Product</class>

        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ecommercedb"/>
            <property name="jakarta.persistence.jdbc.user" value="fruit"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.password" value="fruit"/>
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="none"/>
        </properties>
    </persistence-unit>
</persistence>